<section id="contact">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="col-lg-12">
          <div class="text-center color-elements">
          <h2>fazer a denúncia</h2>
          </div>
        </div>
        <div class="col-lg-12 col-md-12">
          <%= simple_form_for( [ resource ] ,:html => { novalidate: true, id: "contactForm", class:"inline" } ) do |f| %>
            <div class="row">
              <div class="col-sm-6 height-contact-element">
                <div class="form-group">
                  <%= f.input :name, wrapper: false,label: false, type: "text", placeholder: "NOME", input_html: { class: 'form-control custom-labels' }%>
                  <p class="help-block text-danger"></p>
                </div>
              </div>
              <div class="col-sm-6 height-contact-element">
                <div class="form-group">
                  <%= f.input :city, wrapper: false,label: false, type: "text", placeholder: "CIDADE", input_html: { class: 'form-control custom-labels' }%>

                  <p class="help-block text-danger"></p>
                </div>
              </div>
              <div class="col-sm-12 height-contact-element">
                <div class="form-group">
                  <%= f.input :description, wrapper: false,label: false, type: "text", placeholder: "DESCRIÇÃO", input_html: { class: 'form-control custom-labels' }%>
                </div>
              </div>
              <div class="col-sm-3 col-xs-6 height-contact-element">
                <div class="form-group">
                  <%= button_tag(type: 'submit',data: { disable_with: "ENVIADO..." }, class: "btn btn-md btn-custom btn-noborder-radius") do %>
                    ENVIAR <i class="mdi-content-save"></i>
                  <% end %>
                </div>
              </div>
              <div class="col-sm-3 col-xs-6 height-contact-element">
                <div class="form-group">
                  <div id="response_holder"></div>
                </div>
              </div>
              <div class="col-sm-12 contact-msg">
              <div id="success"></div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
