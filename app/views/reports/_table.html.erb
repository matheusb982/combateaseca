<section>
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="col-lg-12">
          <div class="text-center color-elements">
          <h2>Den√∫ncias</h2>
          </div>
        </div>
        <div class="col-lg-12 col-md-12">
          <table class="table table-hover">
            <thead>
              <tr>
                <th data-field="nome">Nome</th>
                <th data-field="descricao">Cidade</th>
                <th data-field="opcoes"><%t 'options' %></th>
              </tr>
            </thead>
            <tbody>
              <% collection.order(id: :asc).each do |resource| %>
                  <tr>
                    <td><%= resource.name %></td>
                    <td><%= resource.city %></td>
                    <td> <%= render "actions", :resource => resource %></td>
                  </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>
